﻿


@model EmployeeUpdateVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Employee create</h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                <input class="form-control" asp-for="Surname">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment">Comment</label>
                <input class="form-control" asp-for="Comment">
                <span class="text-danger" asp-validation-for="Comment"></span>
            </div>


            <label asp-for="DepartmentId">Department</label>
            <select asp-for="DepartmentId" class="form-control" asp-items='new SelectList(ViewBag.Departments,"Id","Name")'>
                <option selected disabled>Select Departments</option>
                @foreach (var item in ViewBag.Departments)
                { }
            </select>
            <span class="text-danger" asp-route-id="DepartmentId"></span>
            <div class="form-group">
                <label asp-for="Photo">File</label>
                <input class="form-control" asp-for="Photo">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
